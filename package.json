{
  "name": "ampbot",
  "version": "1.0.0",
  "description": "",
  "main": "src",
  "dependencies": {
    "discord.js": "^11.5.1",
    "dotenv": "^8.0.0",
    "knex": "^0.17.2",
    "lodash.first": "^3.0.0",
    "lodash.isempty": "^4.4.0",
    "nodemon": "^1.19.1",
    "pg": "^7.11.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/lodash.first": "^3.0.6",
    "@types/lodash.isempty": "^4.4.6",
    "@types/uuid": "^3.4.4",
    "eslint": "^5.16.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier-eslint": "^8.8.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "scripts": {
    "start": "tsc && nodemon -r dotenv/config dist",
    "dev": "nodemon -r dotenv/config --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "test": "ENV=test jest",
    "pre-commit-lint": "lint-staged",
    "compile": "tsc",
    "format:js": "prettier --write 'src/**/*.js' 'src/*/!(node_modules)/**/*.js'",
    "lint:ts": "tslint --fix -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:js": "eslint {src} --ignore-path .gitignore "
  },
  "lint-staged": {
    "*.js": [
      "npm run format:js",
      "npm run lint:js",
      "git add"
    ],
    "*.ts": [
      "npm run lint:ts",
      "git add"
    ]
  },
  "author": "",
  "license": "ISC"
}
